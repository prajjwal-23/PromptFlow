# PromptFlow Environment Configuration Template
# Copy this file to .env and update the values for your setup

# Database Configuration
DATABASE_URL=postgresql://promptflow:promptflow123@localhost:5432/promptflow

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=promptflow
MINIO_SECRET_KEY=promptflow123
MINIO_BUCKET_NAME=promptflow-files

# Qdrant Configuration (Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Ollama Configuration (Local LLM Runtime)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,txt,md,docx,csv,json

# Celery Configuration (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring and Logging
SENTRY_DSN=
LOG_TO_FILE=true

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# OpenAI Configuration (optional, for cloud models)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Development Only
SKIP_AUTH=false
MOCK_OLLAMA=false